---
import '@styles/global.css';
import { StatisticsItem } from '@components/ui';

import type { StatisticsItem as StatisticsItemType } from '@scripts/interfaces';

/**
 * Componente que representa a faixa de exibição de propriedades estatísticas a respeito do grupo 
 * (e.g. quatidade de publicações, membros).
 * @param {Object} props - As propriedades do componente.
 * @param {StatisticsItemType[]} [props.itens] - Array de itens estatísticos.
 */
interface Props{
    itens: StatisticsItemType[];
}

const { itens } = Astro.props;
---

<div class="s-statistics">
    <div class="row block-large-1-4 block-medium-1-3 block-tab-1-2 block-500-stack">
        <!-- Renderização automática dos itens estatísticos -->
        {itens.map(item=>(
            <StatisticsItem name={item.name} qtde={item.qtde} img_src={item.img_src}/>
        ))}
    </div>
</div>

<!-- =============================================================================================== -->

<style>
/* ==========================================================================
    Dependencias:
        @assets/imgs/pattern.svg - Padrão de fundo do bloco de estatísticas.
   ========================================================================== */
.s-statistics{
    background-color: var(--color-1);
    background-image: url('@assets/imgs/pattern.svg');
    max-width: 100%;
    padding-top: 30px;
    padding-bottom: 30px;
    margin-bottom: calc(var(--vspace-2) - .1rem);
}
</style>