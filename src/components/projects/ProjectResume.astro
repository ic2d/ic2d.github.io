---
import { ResearchAreaIcon } from '@components/ui';
import '@styles/global.css';

/**
 * Componente representativo do resumo de um projeto ativo.
 * @param {Object} props - As propriedades do componente.
 * @param {string} [props.name] - O nome do projeto.
 * @param {string[]} [props.members] - Os membros envolvidos no projeto.
 * @param {string} [props.description] - A descrição do projeto.
 * @param {string[]} [props.research_areas] - As áreas de pesquisa relacionadas ao projeto.
 * 
 * @remarks 
 * Diferente do componente de projeto inativo, este exibe a descrição do projeto por padrão.
 * O componente exibe em um formato de duas colunas, com fallback para uma única coluna em telas menores.
 */
interface Props{
    name: string;
    members: string[];
    description: string;
    research_areas: string[];
}

const { name, members, description, research_areas } = Astro.props;
---

<article class="project-resume row block-medium-full">
    <hgroup class="column large-6">
        <h4 class="row">{name}</h4>
        <em class="row">Professores envolvidos: {members.join(', ')}<br/>
        Áreas de pesquisa:</em>
        <div class="row">
            {research_areas.map(ra=>(
                <ResearchAreaIcon name={ra} max_height='25px' no_color/>
            ))}
        </div>
    </hgroup>
    <p class="column">
    {description}
    </p>
</article>

<!-- =============================================================================================== -->

<style>
/* Geral */
.project-resume {
    position: relative;
    padding: 0 var(--gutter-lg);
    margin-bottom: var(--vspace-1_5);
}

/* Cabeçalho */
.project-resume hgroup{
    padding-right: 8rem;
    width: 100%;

    em{
        margin-top: var(--vspace-0_25);
        color: var(--color-text);
    }

    > div > span{
        margin-bottom: 8px;
    }
}

:global(.s-dark) .project-resume h4{
    color: var(--color-1)
}

/* Texto */
.project-resume p{
    color: var(--color-text);
    padding: 0;
    text-align: justify;
}
:global(.s-dark) .project-resume p{
    color: var(--color-text-light);
}

/* Responsividade */
@media screen and (max-width: 1200px){
    .project-resume{
        hgroup{
            padding-right: 0;
        }

        p{
            margin-top: var(--vspace-0_5);
        }
    }
}

@media screen and (max-width: 600px) {
    .project-resume {
        padding: 0 var(--gutter-mob);
    }
}

@media screen and (max-width: 400px) {
    .project-resume {
        padding: 0;
    }
}
</style>